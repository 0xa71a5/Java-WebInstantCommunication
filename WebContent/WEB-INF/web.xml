<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

	<listener>  
    <listener-class>com.wgh.model.StartInit</listener-class>  
  	</listener>  

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.wgh.servlet.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>regist</servlet-name>
        <servlet-class>com.wgh.servlet.regist</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>chatRoom</servlet-name>
        <servlet-class>com.wgh.servlet.chatRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>websocketTest</servlet-name>
        <servlet-class>com.wgh.servlet.wsGet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ajaxTest</servlet-name>
        <servlet-class>com.wgh.servlet.AjaxTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>com.wgh.servlet.wsGet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>adminAjax</servlet-name>
        <servlet-class>com.wgh.servlet.AdminAjax</servlet-class>
    </servlet>
    
	<servlet>
    <servlet-name>DownLoadServlet</servlet-name>
    <servlet-class>com.wgh.servlet.DownLoadServlet</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>ListFileServlet</servlet-name>
    <servlet-class>com.wgh.servlet.ListFileServlet</servlet-class>
    </servlet>
    <servlet>
    <servlet-name>UploadHandleServlet</servlet-name>
    <servlet-class>com.wgh.servlet.UploadHandleServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>com.wgh.servlet.wsGet_Profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profileAjax</servlet-name>
        <servlet-class>com.wgh.servlet.ProfileAjax</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>leave</servlet-name>
        <servlet-class>com.wgh.servlet.leave</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fileServlet</servlet-name>
        <servlet-class>com.wgh.servlet.FileServlet</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>chatRoom</servlet-name>
        <url-pattern>/chatRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>regist</servlet-name>
        <url-pattern>/regist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>websocketTest</servlet-name>
        <url-pattern>/wsGet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajaxTest</servlet-name>
        <url-pattern>/ajaxTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>adminAjax</servlet-name>
        <url-pattern>/adminAjax</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
    <servlet-name>DownLoadServlet</servlet-name>
    <url-pattern>/servlet/DownLoadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>ListFileServlet</servlet-name>
    <url-pattern>/servlet/ListFileServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>UploadHandleServlet</servlet-name>
    <url-pattern>/servlet/UploadHandleServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
	    <servlet-name>profile</servlet-name>
	    <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>profileAjax</servlet-name>
	    <url-pattern>/profileAjax</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>leave</servlet-name>
	    <url-pattern>/leave</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
	    <servlet-name>fileServlet</servlet-name>
	    <url-pattern>/fileServlet</url-pattern>
    </servlet-mapping>
    
    
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.wgh.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
